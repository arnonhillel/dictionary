{
  "name":"component",
  "displayName":"Component Tests",
  "roots":[
    "./component-tests"
  ],
  "testEnvironment":"node",
  "moduleFileExtensions":[
    "ts",
    "js",
    "json"
  ],
  "transform":{
    "^.+\\.ts$":"ts-jest"
  },
  "globals":{
    "ts-jest":{
      "tsConfig":"tsconfig.json"
    }
  },
  "testMatch":[
        "<rootDir>/component-tests/**/*.test.(ts|js)"
  ],
  "testPathIgnorePatterns":[
    "node_modules",
    "<rootDir>/component-tests/strategies"
  ],
  "coveragePathIgnorePatterns":[
        "<rootDir>/src/App.ts",
        "<rootDir>/src/Server.ts",
        "<rootDir>/src/configuration/Configuration.ts",
        "<rootDir>/src/configuration/Logger.ts",
        ".*/tests/.*",
        ".*/__tests__/.*",
        "node_modules",
        "<rootDir>/component-tests/strategies"
  ],
  "moduleNameMapper":{
    "^models(.*)$":"<rootDir>/src/models/$1",
    "^routers(.*)$":"<rootDir>/src/routers/$1",
    "^configuration(.*)$":"<rootDir>/src/configuration/$1",
    "^middleware(.*)$":"<rootDir>/src/middleware/$1",
    "^strategies(.*)$":"<rootDir>/component-tests/strategies/$1",
    "^src(.*)$":"<rootDir>/src/$1",
    "^component-tests(.*)$":"<rootDir>/component-tests/$1"
  },
  "collectCoverageFrom":["src/**/*.{js|ts}"],
  "coverageDirectory":"coverage/component-tests"
}